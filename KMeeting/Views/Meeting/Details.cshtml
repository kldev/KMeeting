
@model KMeeting.DAL.Meeting.MeetingEventEntity
@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid">

    <div class="row" style="margin-bottom: 30px">

        <a asp-action="Index" asp-controller="Home">
            <span class="btn btn-primary">Return</span>
        </a>
    </div>

    <div class="row">
        <div class="col-4 col-md-4">
            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" readonly value="@Model.Name" />
            </div>
            
            <div class="form-group">
                <label>City</label>
                <input type="text" class="form-control" readonly value="@Model.City" />
            </div>
            
            <div class="form-group">
                <label>Address</label>
                <input type="text" class="form-control" readonly value="@Model.Address" />
            </div>

            <div class="form-group">
                <label>Start time</label>
                <input type="text" class="form-control" readonly value="@Model.Date" />
            </div>

            <div class="form-group">
                <label>Status</label>
                <input type="text" class="form-control" readonly value="@Model.Status" />
            </div>

        </div>

        <div class="col-6 col-md-6">
            <ul>
                @foreach (var attendee in Model.Attendees)
                {
                    <li>@attendee.Fullname</li>
                }
            </ul>

        </div>
    </div>


</div>